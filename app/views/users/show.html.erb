<h2>User details</h2>

<dl class='dt-horizontal'>
    <dt><strong>Full Name</strong></dt>
    <dd><%= @user.full_name %></dd>
    <dt><strong>Email</strong></dt>
    <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
    <%= render partial: 'stocks/list' %>
<% else %>
    <p class='lead'>This user is not tracking any stock</p>
<% end %>

<%= link_to "Back", my_friends_path, class: 'btn btn-primary' %><br><br>